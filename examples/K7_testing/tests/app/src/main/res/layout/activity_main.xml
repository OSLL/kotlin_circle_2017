<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.tests.MainActivity">

    <EditText
        android:id="@+id/inputField"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/switchActivity"
        tools:layout_editor_absoluteX="59dp" />

    <Button
        android:id="@+id/changeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="New Button"
        app:layout_constraintBottom_toTopOf="@+id/switchActivity"
        tools:layout_editor_absoluteX="71dp" />

    <Button
        android:id="@+id/switchActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Change Text"
        app:layout_constraintBottom_toTopOf="@+id/inputField"
        app:layout_constraintTop_toBottomOf="@+id/changeText"
        tools:layout_editor_absoluteX="71dp" />

</android.support.constraint.ConstraintLayout>
